<ProductThumbNailWidget>:
    productImage: productImage
    productName: productName
    size_hint: 1, 1
    on_press: self.click()
    background_normal: 'image/white.png'
    BoxLayout:
        orientation:"horizontal"
        size: self.parent.size
        pos: self.parent.pos
        #size_hint:1, 1
        # size: root.width, root.height
        padding:[0,0,0,0]

        BoxLayout:
            # size:  root.width * 0.5, root.height
            size_hint: 1, 1
            AsyncImage:
                id: productImage
        BoxLayout:
            size_hint: 1, 1

            Label:
                id: productName
                halign: 'center'
                valign: 'middle'

                color: [0,0,0,1]
                bold: True
                font_size: '10sp'
                text_size: self.width, self.height

