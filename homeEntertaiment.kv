#:import Factory kivy.factory.Factory
#:include TrailerPopup.kv
#:include ProductPopup.kv
#:include ProductThumbNailWidget.kv
#:include ProductDisplayGridLayout.kv
<MainView>:
    product_Display: product_Display
    frontScrollView: frontScrollView
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:
        id:frontScrollView
        size_hint: 1, .7
        pos_hint:{'x':0, 'y' :.2}
        BoxLayout:
            size_hint: 1, 2

            orientation: 'vertical'
            FloatLayout:
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: 'image/wallPaper.png'
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: 0.95, 0.95, 0.95, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint:.4, .4
                    
                    pos_hint:{'x':.1, 'y':.1}
                    BoxLayout:
                        size_hint_y:400
                        Label:
                            text: 'UNCOMPROMISING HOME ENTERTAIMENT'
                            text_size: self.width/2, self.height
                            font_size: '18sp'
                            halign: 'center'
                            valign: 'bottom'
                            color: 0, 0, 0, 1
                            bold: True
                    BoxLayout:
                        size_hint_y:200
                        Label:
                            text: 'LIFESTYLE 650 HOME ENTERTAINMENT SYSTEM'
                            text_size: self.width/2, self.height
                            font_size: '12sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0, 0, 0, 1
                            
                    BoxLayout:
                        size_hint_y:400
                        AnchorLayout:
                            anchor_x: 'center'
                            anchor_y: 'center'
                            Button:
                                background_color: 0, 0, 0, 1
                                size_hint: None, None
                                text: "Experience"
                                size: 200, 50
                                bold: True
                                on_press: root.scrollDown()




            VideoPlayer:
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: myVideoPlayer
                source: '/users/shangqunyu/Downloads/interstellar.mov'

    ScrollView:
        size_hint: 1, .2
        pos_hint: {'x':0, 'y':0}

        ProductDisplayGridLayout:
            id: product_Display

        


    #heading
    GridLayout:
        cols: 1
        rows: 1
        size_hint: 1, .1
        pos_hint: {'x': 0, 'y':.9}
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            cols: 1
            rows: 1
            AsyncImage:
                source: 'image/bose.png'

    #trailer dropdown
    GridLayout:
        cols: 1
        rows: 1
        padding:[20,20,20,20]
        size_hint: .1, .1
        pos_hint:{'x': 0.9, 'y': 0.9}
        AsyncImage:
            source: 'image/trailerIcon.png'
            
    BoxLayout:
        size_hint: .1, None
        pos_hint: {'x': 0.9, 'y': 0.9}
        Button:
            id: btn
            text: ''
            background_color: [0,0,0,1]
            on_release: root.callback2()
            size_hint_y: None
            height: '48dp'
            bold: True
            background_color: [0,0,0,0]
        






            
            




